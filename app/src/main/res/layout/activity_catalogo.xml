<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogoActivity"
    android:background="@color/paleta5">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/degradad2"
        android:alpha="0.63"/>

    <TextView
        android:id="@+id/tvNombreTienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:fontFamily="@font/comic_sans"
        android:textColor="@color/paleta1"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/tvTipoTienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:fontFamily="@font/comic_sans"
        android:textColor="@color/paleta1"
        android:layout_below="@+id/tvNombreTienda"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvCatalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:fontFamily="@font/comic_sans"
        android:textColor="@color/paleta2"
        android:layout_below="@+id/tvTipoTienda"
        android:text="@string/tv_catalogo"
        android:textSize="28sp"/>

    <ListView
        android:id="@+id/lvListaCatalogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/paleta7"
        android:background="@drawable/formulario_redondeado"
        android:layout_below="@+id/tvCatalogo"/>

</RelativeLayout>